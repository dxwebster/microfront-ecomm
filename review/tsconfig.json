{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types", "src/types"],
    "composite": true,
    "outDir": "./dist"
  },
  "include": [
    "./src",
    "./server/*",
    "./server/**/*",
    "vite.config.ts",
    "./plugins/vite-plugin-react-federation.js",
    "./plugins/vite-plugin-transform-html.js"
  ]
}
